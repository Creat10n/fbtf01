<%= javascript_include_tag("datepicker.js") %>
<%= form_tag tours_path, method: :get,
  class: "search-form col-md-8 col-md-offset-2" do %>
  <div class="search-input">
    <%= text_field_tag :search, params[:search], placeholder: t(".wanna_go"),
      class: "search-form-input form-control" %>
  </div>
  <div class="datepicker-input">
    <%= text_field_tag :date_from, params[:date_from], placeholder: t(".from"),
      class: "datepicker form-control" %>
  </div>
  <div class="datepicker-input">
    <%= text_field_tag :date_to, params[:date_to], placeholder: t(".to"),
      class: "datepicker form-control" %>
  </div>
  <%= submit_tag t(".search"), name: nil,
    class: "btn btn-info btn-m search-form-submit" %>
<% end %>
