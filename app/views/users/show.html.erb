<% provide :title, t(".title", name: @user.name) %>
<h1><%= t ".title", name: @user.name %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: {action: "update"} do |f| %>
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, readonly: true, class: "form-control" %>

      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, readonly: true,  class: "form-control" %>

      <%= f.label :address, t(".address") %>
      <%= f.text_field :address, readonly: true, class: "form-control" %>

      <%= f.label :phone, t(".phone") %>
      <%= f.text_field :phone, readonly: true, class: "form-control" %>
    <% end %>
  </div>
</div>
