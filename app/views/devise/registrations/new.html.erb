<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for resource, as: resource_name, url:
      registration_path(resource_name) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "form-control" %>

      <%= f.label :password, t(".password") %>
      <% if @minimum_password_length %>
        <em><%= t ".min_characters", val: @minimum_password_length %></em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
        class: "form-control" %>

      <%= f.label :password_confirmation, t(".password_confirmation") %>
      <%= f.password_field :password_confirmation, autocomplete:
        "new-password", class: "form-control" %>

      <%= f.label :address, t(".address") %>
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :phone, t(".phone") %>
      <%= f.text_field :phone, class: "form-control" %>

      <%= f.submit t(".sign_up"), class: "btn btn-info btn-m" %>
    <% end %>
  </div>
</div>
